transfer logging = true
log format = %h %o %f %l %b
log file = /var/log/rsyncd.log
pid file = /var/run/rsyncd.pid
slp refresh = 300

[linbo]
comment = LINBO Image directory (read-only)
path = /srv/tftp
use chroot = no
lock file = /var/lock/rsyncd
read only = yes
list = yes
uid = nobody
gid = nogroup
dont compress = *.cloop *.rsync *.gz
pre-xfer exec = /usr/share/oss-linbo/rsync-pre-download.sh
post-xfer exec = /usr/share/oss-linbo/rsync-post-download.sh

[linbo-upload]
comment = LINBO Upload directory
path = /srv/tftp
use chroot = no
lock file = /var/lock/rsyncd
read only = no
list = yes
uid = root
gid = root
dont compress = *.cloop *.rsync *.gz
auth users = linbo
secrets file = /etc/rsyncd.secrets
pre-xfer exec = /usr/share/oss-linbo/rsync-pre-upload.sh
post-xfer exec = /usr/share/oss-linbo/rsync-post-upload.sh
